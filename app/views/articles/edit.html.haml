- set_body_id(:articles)

%h2~ t('article.headline.edit')

- if @article.errors.any?
  %ul
    - @article.errors.each do |message|
      %li
        = message  

- form_for(@article, :url => article_path(@article), :method => 'PUT') do |f|
  = render :partial => 'form', :locals => {:f => f}, :object => @article
  
  = f.submit t('article.edit')