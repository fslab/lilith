- if @article.errors.any?
  %ul
    - @article.errors.each do |message|
      %li
        = message  

- form_for(@article) do |f|
  %p
    %label{:for => 'name'} Name
    = f.text_field :name
  %p
    %label{:for => 'abstract'} Abstract
    = f.text_area :abstract
  %p
    %label{:for => 'body'} Body
    = f.text_area :body
  = f.submit 'create'  
