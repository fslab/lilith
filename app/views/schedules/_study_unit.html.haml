.study_unit{:id => study_unit.id}
  %h3
    %a{:id => study_unit.name.gsub(/ /, '+')}~ study_unit.name
  %a{:href => "##{body_id}", :class => 'back_to_top'}~ "â‡§ #{t('schedules.back_to_top')}"
  .clear
  %ul.courses
    - study_unit.courses.order('name ASC').each do |course|
      %li
        %h4= course.name
        %ul.groups
          %li
            %label{:for => course.id}
              %span.title
                = t('schedules.group_free')
              %input{:type => :checkbox, :id => course.id, :name => 'c[]', :value => course.id.gsub(/-/, '') }
          - course.groups.order('name ASC').each do |group|
            %li
              %label{:for => group.id}
                %span.title
                  %abbr{:title => "#{t('schedules.group')} #{group.name}"}= group.name
                %input{:type => :checkbox, :id => group.id, :name => 'g[]', :value => group.id.gsub(/-/, '') }
